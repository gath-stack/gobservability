# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME=example-service
APP_VERSION=1.0.0
APP_ENV=production

# ============================================================================
# Logger Configuration
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# Observability Configuration
# ============================================================================

# Feature Flags
OBSERVABILITY_METRICS_ENABLED=true
OBSERVABILITY_TRACING_ENABLED=false  # TODO: Implement in future
OBSERVABILITY_LOGS_ENABLED=false     # TODO: Implement in future
OBSERVABILITY_PROFILING_ENABLED=false # TODO: Implement in future

# OTLP Endpoint (Grafana Alloy)
OBSERVABILITY_OTLP_ENDPOINT=10.8.10.254:4317

# Export Intervals
OBSERVABILITY_METRIC_EXPORT_INTERVAL=10
OBSERVABILITY_TRACE_EXPORT_INTERVAL=5

# Batch Sizes
OBSERVABILITY_METRIC_BATCH_SIZE=1024
OBSERVABILITY_TRACE_BATCH_SIZE=512

# Sampling (0.1 = 10% in production)
OBSERVABILITY_TRACE_SAMPLING_RATE=0.1

# Optional: Deployment ID
# DEPLOYMENT_ID=prod-deployment-001

# Optional: Hostname override
# HOSTNAME=srv-app-prod-01

# ============================================================================
# Development Override Example
# ============================================================================
# Uncomment for local development:
#
# APP_ENV=development
# LOG_LEVEL=DEBUG
# OBSERVABILITY_METRICS_ENABLED=true
# OBSERVABILITY_OTLP_ENDPOINT=localhost:4317
# OBSERVABILITY_TRACE_SAMPLING_RATE=1.0  # 100% sampling in dev