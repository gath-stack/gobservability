# ============================================
# K6 Configuration
# ============================================

# Target application URL
# Use host.containers.internal for accessing host from container
BASE_URL=http://host.containers.internal:8080

# ============================================
# Prometheus Integration
# ============================================

# Prometheus Remote Write endpoint
K6_PROMETHEUS_RW_SERVER_URL=http://host.containers.internal:9090/api/v1/write

# Use native histograms for better performance
K6_PROMETHEUS_RW_TREND_AS_NATIVE_HISTOGRAM=true

# Push interval for metrics (default: 10s)
K6_PROMETHEUS_RW_PUSH_INTERVAL=10s

# Prometheus query endpoint (for validation)
PROMETHEUS_URL=http://host.containers.internal:9090

# ============================================
# Grafana Configuration
# ============================================

# Grafana URL for viewing results
GRAFANA_URL=http://localhost:3000

# ============================================
# K6 Options
# ============================================

# K6 container image
K6_IMAGE=grafana/k6:latest

# Enable verbose logging
K6_VERBOSE=false

# Summary export path
K6_SUMMARY_EXPORT=/results/summary.json

# ============================================
# Test Configuration
# ============================================

# Override test duration (optional)
# TEST_DURATION=5m

# Override virtual users (optional)
# TEST_VUS=100

# ============================================
# Optional: Custom Tags for Prometheus
# ============================================

# Environment tag
K6_PROMETHEUS_RW_TAGS_ENV=development

# Service tag
K6_PROMETHEUS_RW_TAGS_SERVICE=gath-web

# Team tag (optional)
K6_PROMETHEUS_RW_TAGS_TEAM=platform